{
  "functions": {
    "backend/server.js": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/arena",
      "destination": "/public/index-arena.html"
    },
    {
      "source": "/premium", 
      "destination": "/public/index-premium.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin.html"
    }
  ]
}