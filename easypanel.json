{
  "name": "myfablab",
  "type": "static",
  "build": {
    "command": "cd backend && npm install",
    "outputDirectory": "."
  },
  "server": {
    "command": "cd backend && node server.js",
    "port": 3001,
    "healthCheck": "/api/health"
  },
  "static": {
    "root": "public",
    "indexFile": "index.html",
    "errorFile": "index.html"
  },
  "routes": [
    {
      "path": "/",
      "file": "public/index.html"
    },
    {
      "path": "/arena",
      "file": "public/index-arena.html"
    },
    {
      "path": "/premium",
      "file": "public/index-premium.html"
    },
    {
      "path": "/admin",
      "file": "public/admin.html"
    },
    {
      "path": "/api/*",
      "proxy": "http://localhost:3001"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001"
  }
}